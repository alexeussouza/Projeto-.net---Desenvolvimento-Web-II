@model IEnumerable<Projeto1_IF.Models.TbMedicamento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BulaArquivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoriaMedicamentoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BulaArquivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoriaMedicamentoNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMedicamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMedicamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMedicamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
